section(class="single-info overlay_container")
    article(class="movie_cover" style="background: url("+image_url+movie.backdrop_path+")")
    article(class="movie_info")
        article(class="movie-poster")
            h2 #{movie.title}
            //- img(src=image_url+movie.poster_path class="poster" alt="Movie")
            button(type="button" class="playVideo" data-trailer=trailer)
                i(class="fas fa-play")
                span Watch Trailer
            button(type="button" class="playVideo" data-trailer=movieVideo)
                i(class="fas fa-play")
                span Watch Movie
        //- article(class="movie-details")
        //-     p #{movie.overview}

    div(class="modal" id="myModal")
        div(class="modal-content")
            div(class="modal-header")
                button(class="close") &times;
            div(class="modal-body")
                iframe(src='#', sandbox="allow-forms allow-pointer-lock allow-same-origin allow-scripts allow-top-navigation" class="trailer" id="trailerFrame" frameborder="2" allowscriptaccess="always" width="500" height="300" allow="autoplay" allowfullscreen)
section(class="single more")
    h1 Similar Movies
    each movie, i in similarMovies
        a(class="blocks" href="/movies/display?id="+ movie.id)
            figure
                img(src= image_url+movie.poster_path, alt="Movie")
                figcaption #{movie.title}